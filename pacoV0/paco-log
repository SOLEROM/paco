#!/usr/bin/env python3
"""
paco-log - Append a timestamped note to a project's log
Usage: paco-log <project> <message>
"""

import sys
import argparse
from paco_lib import append_to_log, init_paco_dirs


def main():
    parser = argparse.ArgumentParser(
        description="Add a timestamped log entry to a PACO project"
    )
    parser.add_argument("project", help="Project name")
    parser.add_argument("message", help="Log message")
    
    args = parser.parse_args()
    
    # Initialize PACO dirs
    init_paco_dirs()
    
    # Append to log
    append_to_log(args.project, args.message)
    
    print(f"âœ“ Log entry added to '{args.project}'")


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("\nCancelled.")
        sys.exit(1)
    except Exception as e:
        print(f"Error: {e}", file=sys.stderr)
        sys.exit(1)
